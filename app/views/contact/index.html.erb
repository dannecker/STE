      </div>

      <div class="form-group">
        <%= f.text_field :subject, placeholder: "Subject", class: "form-control", required: true, pattern: ".{2,32}" %>
        <span class="input-icon fui-check-inverted validity-check"></span>
      </div>

      <%= f.text_area :message, placeholder: "Enter Something", class: "form-control", required: true, pattern: ".{2,32}" %>
      <br>

